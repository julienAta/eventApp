{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": ["node"]
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
